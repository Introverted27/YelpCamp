<% include ./partials/header%>
<div class="container">
  <header class="jumbotron login-header">
    <div class="form">
      <h1>Login</h1>
      <form action="/login" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control" type="text" name="username" placeholder="username">
        </div>
        <div class=" form-group">
          <label for="password">Password</label>
            <input class="form-control pwd" type="password" name="password" placeholder="password">
            <div class="float-right pwdbtn" data-toggle="tooltip" data-placement="right" title="Show Password" >
              <i class="fas fa-eye"></i>
            </div>
          </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary" type="submit">Login</button>
        </div>
      </form>
      <p></p>
      <a class="mr-auto" href="/forgot">Forgot Password</a>
    </div>
  </header>
</div>

<% include ./partials/footer%>
